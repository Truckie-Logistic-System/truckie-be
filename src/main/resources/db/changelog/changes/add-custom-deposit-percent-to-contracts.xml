<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <!-- Add custom_deposit_percent column to contracts table -->
    <changeSet id="add-custom-deposit-percent-to-contracts" author="system">
        <addColumn tableName="contracts">
            <column name="custom_deposit_percent" type="DECIMAL(5,2)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <rollback>
            <dropColumn tableName="contracts" columnName="custom_deposit_percent"/>
        </rollback>
    </changeSet>

    <!-- Add comment for documentation -->
    <changeSet id="add-comment-to-custom-deposit-percent" author="system">
        <sql>
            COMMENT ON COLUMN contracts.custom_deposit_percent IS 'Custom deposit percentage for this contract (0-100). NULL means use global setting from contract_settings table.';
        </sql>
        
        <rollback>
            <sql>
                COMMENT ON COLUMN contracts.custom_deposit_percent IS NULL;
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
