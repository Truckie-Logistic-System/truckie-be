<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="add-payment-breakdown-snapshot-to-contracts" author="system">
        <addColumn tableName="contracts" schemaName="public">
            <column name="payment_breakdown_snapshot" type="jsonb">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="contracts" columnName="payment_breakdown_snapshot" schemaName="public"/>
        </rollback>
    </changeSet>

    <changeSet id="add-comment-payment-breakdown-snapshot" author="system">
        <sql>
            COMMENT ON COLUMN public.contracts.payment_breakdown_snapshot IS 
            'Payment breakdown snapshot - stores all pricing details at contract creation time to ensure historical accuracy. Includes vehicles, prices, distances, multipliers, surcharges, insurance rates, etc.';
        </sql>
    </changeSet>

</databaseChangeLog>
