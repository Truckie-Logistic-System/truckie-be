<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <!-- Add service_status column to vehicle_maintenance table -->
    <changeSet id="add-service-status-to-vehicle-maintenance" author="system">
        <sql>
            ALTER TABLE public.vehicle_maintenance 
            ADD COLUMN service_status VARCHAR(20);
        </sql>
        <rollback>
            ALTER TABLE public.vehicle_maintenance 
            DROP COLUMN IF EXISTS service_status;
        </rollback>
    </changeSet>

</databaseChangeLog>
