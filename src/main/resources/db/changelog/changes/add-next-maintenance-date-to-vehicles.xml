<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <!-- Add missing next_maintenance_date column to vehicles table -->
    <changeSet id="add-next-maintenance-date-to-vehicles" author="system">
        <sql>
            ALTER TABLE public.vehicles 
            ADD COLUMN next_maintenance_date DATE;
        </sql>
        <rollback>
            ALTER TABLE public.vehicles 
            DROP COLUMN IF EXISTS next_maintenance_date;
        </rollback>
    </changeSet>

</databaseChangeLog>
